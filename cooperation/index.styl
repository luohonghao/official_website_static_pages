fontSize = 17;
// titleLabelWeight= 500
titleLabelWeight = initial;

.bottom-gif {
    width: 100%;
}

body {
    padding: 2em;
    font-family: /* 西文 */ -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Ubuntu, Helvetica Neue, Helvetica, Arial, /* 中文 */ PingFang SC, Hiragino Sans GB, Microsoft YaHei UI, Microsoft YaHei, Source Han Sans CN, sans-serif;
}

label {
    font-size: fontSize px;
    margin: 0.3em 0em;
}

input[type=text], input[type=tel], textarea {
    border-radius: 0.1em;
    padding: 0.4em;
}

.input-text {
    label:nth-child(1) {
        font-weight: titleLabelWeight;
    }

    margin: 1em 0em;
    font-size: fontSize px;
    width: 100%;

    label {
        display: block;
    }

    input, textarea {
        display: inline-block;
        font-size: fontSize px;
        background-color: #f3f3f3;
        border: 0em;
        width: 100%;
    }

    input[type=tel] {
        height: 34.6 px;
    }

    textarea {
        resize: vertical;
    }
}

.input-radio {
    label:nth-child(1) {
        font-weight: titleLabelWeight;
    }

    label {
        display: inline-block;
        width: 49%;
    }
}

.input-radio-1 {
    label:nth-child(1) {
        font-weight: titleLabelWeight;
    }

    label {
        display: inline-block;
        width: 100%;
    }

    input[type=text] {
        display: inline-block;
        font-size: fontSize px;
        background-color: #f3f3f3;
        border: 0em;
        width: 100%;
    }
}

p {
    font-size: 0.6 * fontSize px;
}

.submit-button {
    text-align: center;
}

.submit-button>button {
    width: 40%;
    font-size: fontSize px;
    text-align: center;
    border-radius: 0.1em;
    border: 0em;
    background-color: #d4532b;
    color: white;
}

* {
    box-sizing: border-box;
}

.mytitle {
    text-align: center;
    position: relative;
    font-size: (fontSize * 2) px;
    line-height: (fontSize * 2) px;
    padding: 0.3em 0px;
}

.mytitle>span {
    float: left;
    background-color: #d4532b;
    display: inline-block;
    height: (fontSize * 2.3) px;
    width: 40px;
}

.validatorMessage {
    color: #e6a23c;
}

body {
    max-width: 360px;
    margin: 0em auto
    padding-top: 0em
}